{
    "name": "go-web-app-workspace",
    "version": "1.0.0",
    "type": "module",
    "license": "MIT",
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IFRCGo/go-web-app.git"
    },
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "build:ui": "pnpm --filter @ifrc-go/ui build",
        "build": "pnpm -r build",
        "start": "pnpm build:ui && pnpm --filter go-web-app start",
        "storybook": "pnpm build:ui && pnpm --filter go-ui-storybook storybook",
        "build:storybook": "pnpm build:ui && pnpm --filter go-ui-storybook build",
        "chromatic": "pnpm build:ui && pnpm --filter go-ui-storybook chromatic",
        "typecheck": "pnpm -r typecheck",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r lint:fix"
    },
    "workspaces": [
        "app",
        "packages/ui",
        "packages/go-ui-storybook"
    ],
    "pnpm": {
        "patchedDependencies": {
            "@togglecorp/re-map": "patches/@togglecorp__re-map.patch"
        }
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1"
    }
}
